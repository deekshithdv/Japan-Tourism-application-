<div class="posts">
  <div class="row">
    <div class="col-7">
    <%= link_to "New post", new_post_path, class: "btn", style: "float:right; background-color: #CC0066; color: #fff"; %>
      <% @posts.each do |post| %>
        <section class="post">
          <!-- post view -->
            <div class="wrapper">
              <%=image_tag post.files[0] , :width => '100%' %>
            </div>

            <div class="user">
              <div class="avatar">
              <% if post.user.avatar.attached? %>
             <%= image_tag post.user.avatar %>
              <%else%>
                <%= image_tag("https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp")%>
              <%end %>
              
              </div>
              <div class="username">
                <%=link_to post.user.username, profile_path(post.user.id), class: "username" %>
                <br>
                <%= post.location %>
              </div>

            </div>
          <div class="description">
          <% if post.user.id == current_user.id %>
            <%= link_to  raw("<i class=\"fa fa-trash-o \"></i>"), post, :method => :delete, :confirm => "Are you sure?", :style=> 'float:right;font-size:12px;'%>
          <%end%>
          <%= post.caption %><br/>
          </div>
        </section>
      <% end %> 
    </div>
    <div class="col-3">
      <div class="follower-suggetions">
        <p class="text-muted"> Explore places</p>
        <p> Tokyo </p>
        <p> Kyoto </p> 
        <p> Osaka</p>
        <p> Hokkaido </p>
      </div>
    </div>
  </div>
</div>